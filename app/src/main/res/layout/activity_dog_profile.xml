<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.design.widget.CollapsingToolbarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@color/black"/>
        </android.support.v7.widget.Toolbar>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            android:weightSum="3"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/profile_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/btnCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    app:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/camera"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image1"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image2"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image3"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image4"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image5"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/white"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <TextView
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="NAME"/>
                            <EditText
                                android:id="@+id/etDogName"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#676767"
                                android:maxLines="1"
                                android:textColor="#676767"
                                android:background="@null"
                                android:textSize="14sp"
                                android:hint="Dog Name"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="1dp"
                                android:background="#676767"></View>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <TextView
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="BREED"/>
                            <EditText
                                android:id="@+id/etDogBreed"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#676767"
                                android:maxLines="1"
                                android:textColor="#676767"
                                android:background="@null"
                                android:textSize="14sp"
                                android:hint="Dog Breed"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="1dp"
                                android:background="#676767"></View>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:orientation="vertical">
                            <TextView
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="ABOUT"/>
                            <EditText
                                android:id="@+id/etAbout"
                                android:padding="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="#676767"
                                android:textColor="#676767"
                                android:maxLines="1"
                                android:background="@null"
                                android:textSize="14sp"
                                android:hint="My Puppy..."/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_height="1dp"
                                android:background="#676767"></View>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:background="@drawable/shape_editext"
                                android:text="Gender"/>
                            <TextView
                                android:id="@+id/age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_margin="2dp"
                                android:padding="10dp"
                                android:background="@drawable/shape_editext"
                                android:text="Age"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:weightSum="2"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="Your Puppy Have Vaccinations "/>
                            <Switch
                                android:layout_weight="0.2"
                                android:id="@+id/swtVac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="50dp"
                                android:layout_marginEnd="50dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:weightSum="2"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1.8"
                                android:id="@+id/tvAllergy"
                                android:layout_gravity="left"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="Your Puppy Have an Allergy"/>
                            <Switch
                                android:layout_weight="0.2"
                                android:id="@+id/swtAlrgy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="50dp"
                                android:layout_marginEnd="50dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:padding="4dp"
                            android:weightSum="2"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@color/white">
                            <TextView
                                android:id="@+id/tvPuppy"
                                android:layout_weight="1.8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#676767"
                                android:text="Do You Have A multiple puppy"/>
                            <Switch
                                android:layout_weight="0.2"
                                android:id="@+id/swtNoPuppy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="50dp"
                                android:layout_marginEnd="50dp" />
                        </LinearLayout>
                        <Button
                            android:id="@+id/btnContinue"
                            android:layout_weight="0.2"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Continue"
                            style="@style/ButtonStyle"/>
                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.CollapsingToolbarLayout>

</LinearLayout>
