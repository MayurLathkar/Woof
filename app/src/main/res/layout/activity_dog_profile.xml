<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:weightSum="3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Enter Your Dog Details"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView3" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/profile_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF69B4"
            app:backgroundTint="#FF69B4"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/camera"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image1"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add"/>
        <ImageView
            android:id="@+id/image3"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add"/>
        <ImageView
            android:id="@+id/image4"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add"/>
        <ImageView
            android:id="@+id/image5"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="NAME"/>
                    <EditText
                        android:id="@+id/etDogName"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#676767"
                        android:maxLines="1"
                        android:textColor="#676767"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="Dog Name"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="1dp"
                        android:background="#676767"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="BREED"/>
                    <EditText
                        android:id="@+id/etDogBreed"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#676767"
                        android:maxLines="1"
                        android:textColor="#676767"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="Dog Breed"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="1dp"
                        android:background="#676767"></View>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="ABOUT"/>
                    <EditText
                        android:id="@+id/etAbout"
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#676767"
                        android:textColor="#676767"
                        android:maxLines="1"
                        android:background="@null"
                        android:textSize="14sp"
                        android:hint="My Puppy..."/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="1dp"
                        android:background="#676767"></View>
                </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="2"
                   android:layout_margin="10dp"
                   android:orientation="horizontal">
                   <Spinner
                       android:id="@+id/spinner1"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:popupBackground="@android:color/white"
                       android:popupTheme="@style/AppTheme"
                       android:background="@android:drawable/dialog_holo_light_frame"
                       android:layout_height="wrap_content" />
                   <Spinner
                       android:id="@+id/spinner2"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:popupTheme="@style/AppTheme"
                       android:background="@android:drawable/dialog_holo_light_frame"
                       android:layout_height="wrap_content"
                       android:popupBackground="@android:color/white" />
               </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="Your Puppy Have Vaccinations if any"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/add"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1.7"
                        android:id="@+id/tvAllergy"
                        android:layout_gravity="left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="Your Puppy Have an Allergy"/>
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_weight="0.3"
                        android:id="@+id/chkAllergy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginEnd="50dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <TextView
                        android:id="@+id/tvPuppy"
                        android:layout_weight="1.7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#676767"
                        android:text="Do You Have A multiple puppy"/>
                    <Switch
                        android:layout_weight="0.3"
                        android:id="@+id/btnSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginEnd="50dp" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnContinue"
                    android:layout_weight="0.2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/btn_back_user_details"
                    android:text="Continue" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>