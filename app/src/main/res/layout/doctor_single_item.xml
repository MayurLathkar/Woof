<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="5dp"
        app:contentPadding="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctorImage"
                android:layout_marginRight="5dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor"
                android:layout_alignBottom="@+id/linearLayout3"
                android:layout_alignParentTop="true" />
            <LinearLayout
                android:layout_toRightOf="@+id/doctorImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout3">
                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Harrison Wells"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/doctorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="harison@gmail.com"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/doctorNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="9845738473"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/doctorBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacted at 12 Sep, 2016"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/doctorAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalyan nagar, Bangalore"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>