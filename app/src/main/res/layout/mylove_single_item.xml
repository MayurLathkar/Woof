<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/ll"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dog1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/image_gradient" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="left|bottom">
            <TextView
                android:id="@+id/dogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="Lucky -"
                android:layout_gravity="left|center_vertical" />
            <TextView
                android:id="@+id/dogAge"
                android:layout_toRightOf="@+id/dogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:text="1yr"
                />
            <TextView
                android:id="@+id/dogCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dogName"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:text="William scot"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:padding="10dp">
            <ImageView
                android:id="@+id/liked"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/loved_spa" />
            <ImageView
                android:id="@+id/chat"
                android:layout_toRightOf="@id/liked"
                android:layout_marginRight="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/like"/>
            <ImageView
                android:id="@+id/detail"
                android:layout_toRightOf="@id/chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/store"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_toRightOf="@+id/detail"
                android:textColor="@color/white"
                android:text="2"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>